<body>
  <div class="container">
    <h1>Logical Reasoning Quiz</h1>
    <form id="quizForm"></form>
    <button type="button" class="btn" onclick="submitQuiz()">Submit Quiz</button>
    <div id="scoreCard"></div>
  </div>

  <script>
    const quizForm = document.getElementById('quizForm');
    const scoreCard = document.getElementById('scoreCard');
    let quizData = [];

    async function fetchQuizData() {
      const response = await fetch('https://opentdb.com/api.php?amount=15&category=9&type=multiple');
      const data = await response.json();
      quizData = data.results;
      displayQuiz();
    }

    function decodeHTML(html) {
      const txt = document.createElement('textarea');
      txt.innerHTML = html;
      return txt.value;
    }

    function displayQuiz() {
      quizData.forEach((item, index) => {
        const answers = [...item.incorrect_answers];
        const correct = item.correct_answer;
        answers.splice(Math.floor(Math.random() * 4), 0, correct);

        const labels = ['A', 'B', 'C', 'D'];

        const questionDiv = document.createElement('div');
        questionDiv.classList.add('question');
        questionDiv.setAttribute('data-correct', decodeHTML(correct));

        questionDiv.innerHTML = `<h3>Q${index + 1}. ${decodeHTML(item.question)}</h3>`;

        answers.forEach((answer, i) => {
          const decodedAnswer = decodeHTML(answer);
          questionDiv.innerHTML += `
            <div class="option">
              <label>
                <input type="radio" name="q${index}" value="${decodedAnswer}"> ${labels[i]}. ${decodedAnswer}
              </label>
            </div>
          `;
        });

        quizForm.appendChild(questionDiv);
      });
    }

    function submitQuiz() {
      let score = 0;
      let attempted = 0;

      const questions = document.querySelectorAll('.question');
      questions.forEach((qDiv, index) => {
        const correctAnswer = qDiv.getAttribute('data-correct');
        const options = qDiv.querySelectorAll('input[type=\"radio\"]');
        let userAnswered = false;

        options.forEach(option => {
          const parent = option.closest('.option');
          option.disabled = true; // prevent further changes

          if (option.checked) {
            userAnswered = true;
            if (option.value === correctAnswer) {
              parent.classList.add('correct');
              score++;
            } else {
              parent.classList.add('incorrect');
            }
          }

          if (option.value === correctAnswer) {
            parent.classList.add('correct');
          }
        });

        if (userAnswered) attempted++;
      });

      scoreCard.innerHTML = `
        <h2>Your Scorecard</h2>
        <h3>Total Questions: ${quizData.length}</h3>
        <h3>Total Attempted: ${attempted}</h3>
        <h3>Correct Answers: ${score}</h3>
        <h3>Wrong Answers: ${attempted - score}</h3>
        <h2>Final Score: ${score} / ${quizData.length}</h2>
      `;
      scoreCard.style.display = 'block';
      window.scrollTo({ top: document.body.scrollHeight, behavior: 'smooth' });
    }

    fetchQuizData();
  </script>
</body>
</html>
